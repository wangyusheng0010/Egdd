<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CacheFragment">

    <RelativeLayout
        android:layout_weight="1"
        android:padding="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_setting"
            android:background="@mipmap/setting_unpressed"
            android:layout_width="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_30"/>
        <ImageView
            android:background="@mipmap/phone_app_logo"
            android:layout_width="@dimen/dp_150"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_40"/>
        <TextView
            android:id="@+id/tv_cache"
            android:text="清理缓存"
            android:textColor="@color/color_5_green"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/textHint"
        android:layout_height="@dimen/dp_0_1"/>
    <SeekBar
        android:id="@+id/seek_bar"
        android:background="@color/textHint"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="@dimen/dp_0"/>
    <com.google.android.material.tabs.TabLayout
        android:layout_weight="1"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:padding="@dimen/dp_8"
        android:id="@+id/rl_WX"
        android:background="@color/blue"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_gift"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_55"/>
        <TextView
            android:text="关注微信"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_enter_white"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
    </RelativeLayout>
</LinearLayout>