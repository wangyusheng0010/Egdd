<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.caches.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_enter"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_common_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="设置"
            android:layout_centerInParent="true"
            android:textColor="@color/color_5_green"
            android:textSize="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_login"
                android:layout_width="match_parent"
                android:background="@mipmap/account_info_bg"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:id="@+id/iv_login"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/account_head_default"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"/>
                <TextView
                    android:id="@+id/tv_login"
                    android:text="点击登录"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/iv_login"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>
            <LinearLayout
                android:id="@+id/ll_vip"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/dp_4_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_vip"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/setting_vip_icon"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"/>
                    <TextView
                        android:layout_toRightOf="@id/iv_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:text="会员权益" />
                    <ImageView
                        android:background="@mipmap/icon_enter"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                </RelativeLayout>
                <LinearLayout
                    android:background="@drawable/setting_linearlayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100">
                    <ImageView
                        android:background="@drawable/setting_linearlayout_iv"
                        android:layout_weight="1"
                        android:src="@mipmap/no_interfence_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="1"
                        android:src="@mipmap/high_eye_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_buy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="购买会员 仅需8元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="限时抢购！立享VIP会员特权！"
                    android:textColor="@color/divider"
                    android:layout_below="@id/tv_buy"
                    android:textSize="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_vip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="立即开通"
                    android:textColor="@color/white"
                    android:background="@drawable/setting_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"/>
            </RelativeLayout>
            <TextView
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/rl_play"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_play"
                    android:background="@mipmap/setting_icon_play"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="播放设置"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_splash"
                    android:background="@mipmap/setting_icon_splash"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="启动音效"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_splash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/sw_splash"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:thumb="@drawable/select_setting_switch_thumb"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_sleep"
                    android:background="@mipmap/setting_icon_sleep"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="作息控制"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/sw_sleep"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:thumb="@drawable/select_setting_switch_thumb"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_rest"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_rest"
                    android:background="@mipmap/setting_icon_rest"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="休息频率"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_rest_time"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_enter_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_enter_rest"
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_limit"
                    android:background="@mipmap/setting_icon_vip_limit"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="会员有效期"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_renew"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_renew"
                    android:background="@mipmap/setting_icon_vip_renew"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="自动续费管理"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_renew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_record"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_record"
                    android:background="@mipmap/setting_icon_vip_record"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="交易记录"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/rl_singer_wechat"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_singer_wechat"
                    android:background="@mipmap/icon_singer_wechat"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>
                <TextView
                    android:text="微信公众号"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_singer_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="关注微信享福利"
                    android:layout_toLeftOf="@id/iv_enter_wechat"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_enter_wechat"
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_question"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_question"
                    android:background="@mipmap/setting_icon_question"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="常见问题"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_advise"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_advise"
                    android:background="@mipmap/setting_icon_advise"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="建议反馈"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_advise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_comment"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_comment"
                    android:background="@mipmap/setting_icon_comment"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="评分支持"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/rl_share"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_share"
                    android:background="@mipmap/setting_icon_share"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="分享推荐"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_cooperation"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_cooperation"
                    android:background="@mipmap/setting_icon_cooperation"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="内容合作"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_cooperation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="@dimen/dp_0_1"/>
            <RelativeLayout
                android:id="@+id/rl_about"
                android:padding="@dimen/dp_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_vip_about"
                    android:background="@mipmap/setting_icon_about"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:text="关于我们"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_vip_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@mipmap/icon_enter"
                    android:layout_width="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">
                <TextView
                    android:id="@+id/tv_release"
                    android:layout_centerInParent="true"
                    android:text="v2.6.18.release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>