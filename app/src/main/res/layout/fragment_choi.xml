<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.lookfragment.ChoiFragment">



        <LinearLayout
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pei"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/dp_228"
                    android:layout_height="@dimen/dp_130"
                    android:src="@drawable/peiqi" />
                <TextView
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ting_img_one"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_64"
                        android:src="@drawable/bird"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        />

                    <ImageView
                        android:id="@+id/ting_img_tree"

                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_64"
                        android:src="@drawable/dog" />
                </LinearLayout>


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/write"
                android:id="@+id/center_rcy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/hui"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/write"
                android:id="@+id/bottom_rcy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


</LinearLayout>